import asyncio

async def main():
    task = asyncio.create_task(asyncfunct())
    print("m1")

    # awaited operation 
    await asyncio.sleep(3)

    print("m2")

    # without awaiting task at the end of the program
    # program can exit without completing it
    await task

async def asyncfunct():
    await asyncio.sleep(1)

    print("Async!!")

asyncio.run(main())